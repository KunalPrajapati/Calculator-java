<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="411dp"
        android:layout_height="482dp"
        android:background="#F4F0F1"
        android:baselineAligned="false"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints,UselessLeaf"
        tools:layout_editor_absoluteX="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints,UselessLeaf">

            <Button
                android:id="@+id/buttonC"
                android:layout_width="81dp"
                android:layout_height="84dp"
                android:layout_margin="5dp"
                android:backgroundTint="#FF9800"
                android:text="C"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                app:cornerRadius="100dp"
                tools:ignore="HardcodedText"
                tools:layout_editor_absoluteX="220dp"
                tools:layout_editor_absoluteY="532dp" />

            <Button
                android:id="@+id/buttonBracketOpen"
                android:layout_width="81dp"
                android:layout_height="84dp"
                android:layout_margin="5dp"
                android:text="("
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                app:cornerRadius="100dp"
                tools:ignore="HardcodedText"
                tools:layout_editor_absoluteX="220dp"
                tools:layout_editor_absoluteY="532dp" />

            <Button
                android:id="@+id/buttonBracketClose"
                android:layout_width="81dp"
                android:layout_height="84dp"
                android:layout_margin="5dp"
                android:text=")"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                app:cornerRadius="100dp"
                tools:ignore="HardcodedText"
                tools:layout_editor_absoluteX="220dp"
                tools:layout_editor_absoluteY="532dp" />

            <Button
                android:id="@+id/buttonDivide"
                android:layout_width="81dp"
                android:layout_height="84dp"
                android:layout_margin="5dp"
                android:text="/"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                app:cornerRadius="100dp"
                tools:ignore="HardcodedText"
                tools:layout_editor_absoluteX="220dp"
                tools:layout_editor_absoluteY="532dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints,UselessLeaf">

            <Button
                android:id="@+id/button7"
                android:layout_width="81dp"
                android:layout_height="84dp"
                android:layout_margin="5dp"
                android:text="7"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                app:cornerRadius="100dp"
                tools:ignore="HardcodedText"
                tools:layout_editor_absoluteX="220dp"
                tools:layout_editor_absoluteY="532dp" />

            <Button
                android:id="@+id/button8"
                android:layout_width="81dp"
                android:layout_height="84dp"
                android:layout_margin="5dp"
                android:text="8"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                app:cornerRadius="100dp"
                tools:ignore="HardcodedText"
                tools:layout_editor_absoluteX="220dp"
                tools:layout_editor_absoluteY="532dp" />

            <Button
                android:id="@+id/button9"
                android:layout_width="81dp"
                android:layout_height="84dp"
                android:layout_margin="5dp"
                android:text="9"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                app:cornerRadius="100dp"
                tools:ignore="HardcodedText"
                tools:layout_editor_absoluteX="220dp"
                tools:layout_editor_absoluteY="532dp" />

            <Button
                android:id="@+id/buttonX"
                android:layout_width="81dp"
                android:layout_height="84dp"
                android:layout_margin="5dp"
                android:text="X"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                app:cornerRadius="100dp"
                tools:ignore="HardcodedText"
                tools:layout_editor_absoluteX="220dp"
                tools:layout_editor_absoluteY="532dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints,UselessLeaf">

            <Button
                android:id="@+id/button4"
                android:layout_width="81dp"
                android:layout_height="84dp"
                android:layout_margin="5dp"
                android:text="4"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                app:cornerRadius="100dp"
                tools:ignore="HardcodedText"
                tools:layout_editor_absoluteX="220dp"
                tools:layout_editor_absoluteY="532dp" />

            <Button
                android:id="@+id/button5"
                android:layout_width="81dp"
                android:layout_height="84dp"
                android:layout_margin="5dp"
                android:text="5"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                app:cornerRadius="100dp"
                tools:ignore="DuplicateIds,HardcodedText"
                tools:layout_editor_absoluteX="220dp"
                tools:layout_editor_absoluteY="532dp" />

            <Button
                android:id="@+id/button6"
                android:layout_width="81dp"
                android:layout_height="84dp"
                android:layout_margin="5dp"
                android:text="6"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                app:cornerRadius="100dp"
                tools:ignore="HardcodedText"
                tools:layout_editor_absoluteX="220dp"
                tools:layout_editor_absoluteY="532dp" />

            <Button
                android:id="@+id/buttonMinus"
                android:layout_width="81dp"
                android:layout_height="84dp"
                android:layout_margin="5dp"
                android:text="-"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="30sp"
                app:cornerRadius="100dp"
                tools:ignore="HardcodedText"
                tools:layout_editor_absoluteX="220dp"
                tools:layout_editor_absoluteY="532dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints,UselessLeaf">

            <Button
                android:id="@+id/button1"
                android:layout_width="81dp"
                android:layout_height="84dp"
                android:layout_margin="5dp"
                android:text="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                app:cornerRadius="100dp"
                tools:ignore="HardcodedText"
                tools:layout_editor_absoluteX="220dp"
                tools:layout_editor_absoluteY="532dp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="81dp"
                android:layout_height="84dp"
                android:layout_margin="5dp"
                android:text="2"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                app:cornerRadius="100dp"
                tools:ignore="HardcodedText"
                tools:layout_editor_absoluteX="220dp"
                tools:layout_editor_absoluteY="532dp" />

            <Button
                android:id="@+id/button3"
                android:layout_width="81dp"
                android:layout_height="84dp"
                android:layout_margin="5dp"
                android:text="3"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                app:cornerRadius="100dp"
                tools:ignore="HardcodedText"
                tools:layout_editor_absoluteX="220dp"
                tools:layout_editor_absoluteY="532dp" />

            <Button
                android:id="@+id/buttonAdd"
                android:layout_width="81dp"
                android:layout_height="84dp"
                android:layout_margin="5dp"
                android:text="+"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                app:cornerRadius="100dp"
                tools:ignore="HardcodedText"
                tools:layout_editor_absoluteX="220dp"
                tools:layout_editor_absoluteY="532dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints,UselessLeaf">

            <Button
                android:id="@+id/buttonAC"
                android:layout_width="81dp"
                android:layout_height="84dp"
                android:layout_margin="5dp"
                android:backgroundTint="#FF9800"
                android:text="AC"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                app:cornerRadius="100dp"
                tools:ignore="HardcodedText"
                tools:layout_editor_absoluteX="220dp"
                tools:layout_editor_absoluteY="532dp" />

            <Button
                android:id="@+id/button0"
                android:layout_width="81dp"
                android:layout_height="84dp"
                android:layout_margin="5dp"
                android:text="0"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                app:cornerRadius="100dp"
                tools:ignore="HardcodedText"
                tools:layout_editor_absoluteX="220dp"
                tools:layout_editor_absoluteY="532dp" />

            <Button
                android:id="@+id/buttonDecimal"
                android:layout_width="81dp"
                android:layout_height="84dp"
                android:layout_margin="5dp"
                android:text="."
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                app:cornerRadius="100dp"
                tools:ignore="HardcodedText"
                tools:layout_editor_absoluteX="220dp"
                tools:layout_editor_absoluteY="532dp" />

            <Button
                android:id="@+id/buttonEqual"
                android:layout_width="81dp"
                android:layout_height="84dp"
                android:layout_margin="5dp"
                android:backgroundTint="#FF9800"
                android:text="="
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                app:cornerRadius="100dp"
                tools:ignore="HardcodedText"
                tools:layout_editor_absoluteX="220dp"
                tools:layout_editor_absoluteY="532dp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/ResultTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="56dp"
        android:layout_marginBottom="92dp"
        android:text="0"
        android:textAlignment="textEnd"
        android:textSize="64dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SolutionTv"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/SolutionTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="9dp"
        android:text="0"
        android:textAlignment="textEnd"
        android:textSize="40dp"
        app:layout_constraintBottom_toTopOf="@+id/ResultTv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>